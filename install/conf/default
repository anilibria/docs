server {
	listen      443 ssl http2;
	server_name anilibria.tv www.anilibria.tv;
	ssl_certificate /etc/letsencrypt/live/anilibria.tv/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/anilibria.tv/privkey.pem;
	root	/var/www/anilibria/root;
	index  index.php index.html index.htm;
	
	error_page 403 /pages/error/403.php;
	error_page 404 /pages/error/404.php;
	error_page 502 /pages/error/502.html;

	location ^~ /phpmyadmin {
		auth_basic "Restricted Content";
		auth_basic_user_file /etc/nginx/.htpasswd;
		root /usr/share; 
		location ~ \.php$ {
			try_files $uri $uri/ =404;
			include fastcgi_params;
			fastcgi_param  SCRIPT_FILENAME    $document_root$fastcgi_script_name;
			fastcgi_param  PATH_TRANSLATED	  $document_root$fastcgi_script_name;
			fastcgi_pass unix:/var/run/anilibria.sock;
		}
	}
		
	location ^~ /munin-cgi/munin-cgi-graph/ {
		auth_basic "Restricted Content";
		auth_basic_user_file /etc/nginx/.htpasswd;
		fastcgi_split_path_info ^(/munin-cgi/munin-cgi-graph)(.*);
		fastcgi_param PATH_INFO $fastcgi_path_info;
		fastcgi_pass unix:/var/run/munin/fastcgi-graph.sock;
		include fastcgi_params;
	}

	location /munin/static/ {
		auth_basic "Restricted Content";
		auth_basic_user_file /etc/nginx/.htpasswd;
		alias /etc/munin/static/;
	}

	location /munin {
		auth_basic "Restricted Content";
		auth_basic_user_file /etc/nginx/.htpasswd;
		alias /var/cache/munin/www/;
	}
	
	location ~* ^.+\.(jpg|jpeg|gif|png|svg|js|css|ico|bmp|woff)$ {
		expires 30d;
		access_log off;
	}

	location ^~ /private/ {
		deny all;
	}

	location /upload/ {
		location ~* ^.+\.php {
			deny all;
		}
	}

	rewrite  ^/release/(.*).html$  /pages/release.php?code=$1  last;
	
	location ~ \.php$ {
		default_type 'text/plain';
		access_by_lua_file /etc/nginx/lua/filter.lua;
		try_files $uri $uri/ =404;
		include fastcgi_params;
		fastcgi_param  SCRIPT_FILENAME    $document_root$fastcgi_script_name;
		fastcgi_param  PATH_TRANSLATED	  $document_root$fastcgi_script_name;
		fastcgi_pass unix:/var/run/anilibria.sock;
	}
}

server {
	listen      80 default_server;
	server_name anilibria.tv www.anilibria.tv;
	location ^~ /.well-known/ {
		root /var/www/html;
		default_type "text/plain";
	}	
	location /nginx_status {
		stub_status on;
		access_log   off;
		allow 127.0.0.1;
		deny all;
	}
	location / {
		return 301 https://$server_name$request_uri;
	}
}
